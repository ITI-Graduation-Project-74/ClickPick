
﻿@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

﻿@{
    Layout = null;
}
    <link rel="stylesheet" href="~/css/LineIcons.3.0.css" />
    <link rel="stylesheet" href="~/css/tiny-slider.css" />
    <link rel="stylesheet" href="~/css/glightbox.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />


 <!-- Preloader -->
  <div class="preloader">
    <div class="preloader-inner">
      <div class="preloader-icon">
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
  <!-- /End Preloader -->

  <!-- Start Error Area -->
  <div class="row">
  <div class="maill-success " style="height:90vh; max-width:512px">
    <div class="d-table" style="height:90%">
      <div class="d-table-cell">
        <div class="container">
          <div class="success-content">

            <img src="~/Imgs/General/orderConfirmed.gif" style="width:300px; height:300px;" />
            <h3>@localizer["Your Order Sent Successfully"] </h3>
            <p>@localizer["Thanks for contacting with us, We will get back to you asap"].</p>
             <p> You will be redirected to home within 3 seconds , If Not <a asp-action="index" asp-controller="Product" style="color:blue">@localizer["Click Here"] </a></p>
            
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!-- End Error Area -->

  <!-- ========================= JS here ========================= -->
  <script src="assets/js/bootstrap.min.js"></script>
  <script>
    window.onload = function () {
      window.setTimeout(fadeout, 500);
    }

    function fadeout() {
      document.querySelector('.preloader').style.opacity = '0';
      document.querySelector('.preloader').style.display = 'none';
      
    }
    setTimeout("location.replace('https://localhost:7199/')",4000)
  </script>




