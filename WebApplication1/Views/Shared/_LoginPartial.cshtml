@using Microsoft.AspNetCore.Identity
@using ClickPick.Utility
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul  class="user-login ">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Welcome</strong> <span><b>@User.Identity?.Name</b> </span></a>
    </li>
    @if(User.IsInRole(ApplicationRoles.Role_Admin)){
    <li>
        <a  asp-area="Identity" asp-page="/Account/Register" >Manage Registration</a>
    </li>
    }
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
    }
    else
    {
           <li>
               <a asp-area="Identity" asp-page="/Account/Login"  > Sign In</a>
           </li>
           <li>
               <a asp-area="Identity"  asp-page="/Account/RegisterAs"  >Register</a>
           </li>
    }
</ul>
