				<div class="product-sidebar">
					<!-- Start Single Widget -->
					<div class="single-widget search">
						<h3>Search Product</h3>
						<form asp-controller="Category" asp-action="index">
							<input type="hidden" asp-for="Filter.CategoryId" value="@catagoryId" />

							<select class="form-control" asp-for="Filter.BrandId" asp-items="ViewBag.Brands">
								<option value="0">All Brand</option>
							</select>
							&nbsp;&nbsp;
							<input type="text" asp-for="Filter.SearchSrting" placeholder="Search Here...">
							@*<button type="submit"><i class="lni lni-search-alt"></i></button>*@
							&nbsp;&nbsp;
							<div class="my-1">
								<input type="number" asp-for="Filter.MinPrice" step="1" placeholder="$min" class="form-control-sm-5" />
								&nbsp;&nbsp;
								<input type="number" asp-for="Filter.MaxPrice" step="1" placeholder="$max" class="form-control-sm-5" />
							</div>

							<div class="col-md-12">
								<input type="submit" value="Filter" class="btn btn-primary btn-sm" />
								<a asp-action="Index" class="btn btn-secondary btn-sm float-right">Clear</a>
							</div>

						</form>
					</div>
