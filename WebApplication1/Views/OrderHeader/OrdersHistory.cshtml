

@section css{<link rel="stylesheet" href="~/css/orderHistory.css">}
 <div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">

<div class="col-lg-8 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Your Orders</h4>
                  
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID No.</th>
                          <th>Created On</th> 
                          <th>Status</th>
                          <th>Cancel</th>
                        </tr>
                      </thead>
                      <tbody>
                           @foreach(var order in ViewBag.OrderDetails){
                        <tr>
                          <td>@order.Id</td>
                          <td>@order.OrderDateTime</td>
                          <td>@if(@order.status =="Canceled"){<p class="text-danger">@order.status</p>}
                               else if (@order.status=="Pending"){<p class="text-primary">@order.status</p>}
                              else{<p class="text-success"> @order.status</p>}
                              </td>
                          <td>
                          <a href="/OrderHeader/OrderHistoryDetails/@(order.Id)" class="btn btn-outline-info">View Order</a>
                 
                          </td>

                        </tr>
                           }   
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            
            </div>
              </div>
            </div>
            

    <!-- ========================= JS here ========================= -->
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/tiny-slider.js"></script>
    <script src="assets/js/glightbox.min.js"></script>
    <script src="assets/js/main.js"></script>