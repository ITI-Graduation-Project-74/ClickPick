@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model IEnumerable<Ecommerce.Models.Users_in_Role_ViewModel>  
   
@{  
    ViewBag.Title = @localizer["Users With Roles"];  
    Layout = "~/Views/Shared/_adminPortal.cshtml";

}  
   <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="header-title"></h4>
                            <p class="sub-header">
                            </p>

        <table class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;"  id="t1">  
            <thead>  
                <tr>  
                    <td><b>@localizer["Username"]</b></td>  
                    <td><b>@localizer["Email"]</b></td>  
                    <td><b>@localizer["Roles"]</b></td>  
                </tr>  
            </thead>  
            @foreach (var user in Model)  
            {  
                <tr>  
                    <td>@user.Username</td>  
                    <td>@user.Email</td>  
                    <td>@user.Role</td>  
                      
                </tr>  
            }  
        </table>  
    </div>  
   
    <div class="panel-footer">  
        <p class="box-title"><b>@localizer["Total Users till"] @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>  
    </div>  
</div>  
   
  </div> 
<script src="~/lib/jquery/dist/jquery.min.js"> </script>
 <script src="~/AdminPortalAssets/assets/js/vendor.js"></script>
 <script>
        var oTable;
    $(document).ready(function () {       
       oTable=$('#t1').DataTable({
            "pageLength":50,
             dom: 'Bfrtip',
              buttons: [
        'copy', 'excel', 'pdf'
    ],
    })
  });
 </script>
