@using Ecommerce.Models.ViewModels
@model ShoppingCartVM

@{
    double i = 0;
}
@section css{

    <link rel="stylesheet" href="~/css/LineIcons.3.0.css" />
    <link rel="stylesheet" href="~/css/tiny-slider.css" />
    <link rel="stylesheet" href="~/css/glightbox.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />

}

<!-- Start Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Cart</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="index.html"><i class="lni lni-home"></i> Home</a></li>
                        <li><a href="index.html">Shop</a></li>
                        <li>Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->

    <!-- Shopping Cart -->
    <form method="post">
    <div class="shopping-cart section">
        <div class="container">
            <div class="cart-list-head">
                <!-- Cart List Title -->
                <div class="cart-list-title">
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-12">

                        </div>
                        <div class="col-lg-4 col-md-3 col-12">
                            <p>Product Name</p>
                        </div>
                        @*<div class="col-lg-2 col-md-2 col-12">
                            <p>Quantity</p>
                        </div>*@
                        <div class="col-lg-2 col-md-2 col-12">
                            <p>Subtotal</p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <p>Amount</p>
                        </div>
                        <div class="col-lg-1 col-md-2 col-12">
                            <p>Remove</p>
                        </div>
                    </div>
                </div>
                <!-- End Cart List Title -->

                <!-- Cart Single List list -->
                @foreach (var item in Model.ListCart)
                {
                    <div class="cart-single-list">
                    <div class="row align-items-center">
                        <div class="col-lg-1 col-md-1 col-12">
                            <a href="#"><img src="@item.Product.ImgUrl" alt="ProductImg"></a>
                        </div>
                        <div class="col-lg-4 col-md-3 col-12">
                            <h5 class="product-name"><a href="#">
                                    @item.Product.Name</a></h5>
                            <p class="product-des">
                                <span><em>Category:</em> @item.Product.Catagory.CategoryName</span>
                                
                            </p>
                        </div>
                    
                        <div class="col-lg-2 col-md-2 col-12">
                            <strong>@item.Product.Price.ToString("c")<span class="text-muted">x</span> @item.Count </strong>
                            <p>
                              SubTotal: @(item.Product.Price * @item.Count)
                            </p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                             <a asp-action="DecreaseProduct" asp-route-productId="@item.ProductId" 
                                    class="text-success">
                               <i class="fa-solid fa-cart-plus fa-2x"></i>
                            |
                                <a asp-action="IncreaseProduct" asp-route-productId="@item.ProductId" 
                                  class="fa-solid fa-cart-plus fa-2x">
                                   </a>
                                 </a>
                            
                        </div>
                        <div class="col-lg-1 col-md-2 col-12">
                             <button asp-action="RemoveProduct" asp-route-productId="@item.ProductId" type="submit" class="btn btn-outline-danger btn-lg">
                                            <i class="bi bi-trash bi--xl"></i>
                                        </button>
                        </div>
                    </div>
                </div>
                    
                }
                
                <!-- End Single List list -->
            </div>
            <div class="row">
                <div class="col-12">
                    <!-- Total Amount -->
                    <div class="total-amount">
                        <div class="row">
                            <div class="col-lg-8 col-md-6 col-12">

                            </div>
                            <div class="col-lg-4 col-md-6 col-12">
                                <div class="right">
                                    <ul>
                                         @foreach (var item in Model.ListCart)
                                            {
                                                i += @item.Product.Price * @item.Count;  
                                            }
                                        <li>Cart Subtotal<span>
                                           @i
                                        </span></li>
                                       
                                    </ul>
                                    <div class="button">
                                        <a asp-action="CartSummary" class="btn">Checkout</a>
                                        <a asp-controller="Product" asp-action="index" class="btn btn-alt">Continue shopping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/ End Total Amount -->
                </div>
            </div>
        </div>
    </div>
    </form>
    <!--/ End Shopping Cart -->


	
		