@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@using ClickPick.Models
@model ContactUs
@{
    ViewData["Title"]= "ContactUs";
}

@{
    @if(TempData["Mailsend"] !=null )
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script> 
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script> 
        <script type="text/javascript">
            toastr.success('@TempData["Mailsend"]');
           
       </script> 
    }
}

 <!-- Start Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">@localizer["Contact Us"]</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="index.html"><i class="lni lni-home"></i>@localizer["Home"]</a></li>
                        <li>@localizer["Contact Us"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->

    <!-- Start Contact Area -->
    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">

                            <h2>@localizer["We support you throughout the day"]</h2>
                            <h5>@localizer["Our technical support and customer service department is dedicated to helping you throughout the day"]</h5>
                        </div>
                    </div>
                </div>
                <div class="contact-info">
                    <div class="row">
                        <div class="col-lg-4 col-md-12 col-12">
                            <div class="single-info-head">
                                <!-- Start Single Info -->
                                <div class="single-info">
                                    <i class="lni lni-map"></i>
                                    <h3>@localizer["Address"]</h3>
                                    <ul>
                                        <li>@localizer["44 Salah Salem Street, Nasr City"],<br> @localizer["Cairo"].</li>
                                    </ul>
                                </div>
                                <!-- End Single Info -->
                                <!-- Start Single Info -->
                                <div class="single-info">
                                    <i class="lni lni-phone"></i>
                                    <h3>@localizer["Call us on"]</h3>
                                    <ul>
                                        <li><a href="@localizer["tel"]:+201012293070">+2 010 1229 3070</a></li>
                                        <li><a href="@localizer["tel"]:+201157310793">+2 0115 7310 793</a></li>
                                    </ul>
                                </div>
                                <!-- End Single Info -->
                                <!-- Start Single Info -->
                                <div class="single-info">
                                    <i class="lni lni-envelope"></i>
                                    <h3>@localizer["Mail"]</h3>
                                    <ul>
                                        <li><a href="mailto:support@shopgrids.com">support@shopgrids.com</a>
                                        </li>
                                        <li><a href="mailto:career@shopgrids.com">career@shopgrids.com</a></li>
                                    </ul>
                                </div>
                                <!-- End Single Info -->
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-12 col-12">
                            <div class="contact-form-head">
                                <div class="form-main">
                                 
                                    <form class="form" method="post" action="/Home/ContactUs">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group" >
                                                    <lable></lable>
                                                    <input name="name" type="text" asp-for="@Model.Name" placeholder=@localizer["Your Name"]
                                                        required="required">
                                                        <span asp-validation-for="@Model.Name"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group" >
                                                    <lable></lable>
                                                    <input name="subject" type="text"asp-for="@Model.Subject" placeholder=@localizer["Your Subject"]
                                                        required="required">
                                                        <span asp-validation-for="@Model.Subject"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <lable ></lable>
                                                    <input name="email" type="email"asp-for="@Model.Email" placeholder=@localizer["Your Email"]
                                                        required="required">
                                                        <span asp-validation-for="@Model.Email"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group" >
                                                    <lable ></lable>
                                                    <input name="phone" type="text"asp-for="@Model.PhoneNumber" placeholder=@localizer["Your Phone"]
                                                        required="required">
                                                        <span asp-validation-for="@Model.PhoneNumber"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group message" >
                                                    <lable ></lable>
                                                    <textarea name="message" asp-for="@Model.Message" placeholder=@localizer["Your Message"]></textarea>
                                                    <span asp-validation-for="@Model.Message"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group button">
                                                    <button type="submit" class="btn ">@localizer["Submit Message"]</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ End Contact Area -->